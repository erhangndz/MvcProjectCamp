@model EntityLayer.Concrete.Admin
@{
    ViewBag.Title = "UpdateAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<h3 class="container"> Admin Düzenleme Sayfası</h3>
<form class="container" method="post">
    <label>Kullanıcı Adı</label>
    @Html.HiddenFor(x => x.AdminID)
    @Html.TextBoxFor(x => x.AdminUsername, new { @class = "form-control" })

    <br />
    <label>Şifre</label>
    @Html.TextBoxFor(x => x.AdminPassword, new { @class = "form-control" })

    <br />
    <label>Rolü Seçin</label>
    @Html.DropDownListFor(x => x.AdminRole,(List<SelectListItem>)ViewBag.role, new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-success">Verileri Güncelle</button>
</form>

