@model List<EntityLayer.Concrete.Header>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string color = "";
    string colour = "";
    string status = "";
    string buttonname = "";
    string buttoncolor = "";
}
<br />
<br />
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Başlıklar</h3>
        <br />
        @using (Html.BeginForm("Index", "Header", FormMethod.Post))
        {
        <p>
            @Html.TextBox("p")   <button class="btn btn-primary" type="submit">
                <i class="fas fa-search"></i>
            </button>
        </p>
        }
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th style="width: 1%">
                        #
                    </th>
                    <th style="width: 20%">
                        Başlık Adı
                    </th>
                    <th style="width: 30%">
                        Oluşturan Yazar
                    </th>

                    <th style="width: 8%" class="text-center">
                        Kategori
                    </th>
                    <th style="width: 8%" class="text-center">
                       Durum
                    </th>
                    <th style="width: 30%">
                        
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.Category.CategoryName == "Tiyatro") { color = "warning"; }
                    if (item.Category.CategoryName == "Spor") { color = "success"; }
                    if (item.Category.CategoryName == "Eğitim") { color = "primary"; }
                    if (item.Category.CategoryName == "Kitap") { color = "secondary"; }
                    if (item.Category.CategoryName == "Sinema") { color = "danger"; }
                    if (item.Category.CategoryName == "Dizi") { color = "info"; }
                    if (item.HeaderStatus == false) { colour = "danger"; }
                    if (item.HeaderStatus == true) { colour = "success"; }
                    if (item.HeaderStatus == false) { status = "Pasif"; }
                    if (item.HeaderStatus == true) { status = "Aktif"; }
                    if (item.HeaderStatus == false) { buttoncolor = "success"; }
                    if (item.HeaderStatus == true) { buttoncolor = "danger"; }
                    if (item.HeaderStatus == false) { buttonname = "Aktif Yap"; }
                    if (item.HeaderStatus == true) { buttonname = "Pasif Yap"; }
                <tr>
                    <td>
                        @item.HeaderID
                    </td>
                    <td>
                        <a>
                            @item.HeaderName
                        </a>
                        <br />
                        <small>
                           @(((DateTime)item.HeaderDate).ToString("dd-MMM-yyyy"))
                        </small>
                    </td>
                    <td>
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage">
                                <small>
                                    @item.Writer.WriterName @item.Writer.WriterSurname
                                </small>
                            </li>

                        </ul>
                    </td>

                    <td class="project-state">
                        <span class="badge badge-@color">@item.Category.CategoryName</span>
                    </td>
                    <td class="project-state">
                        <span class="badge badge-@colour">@status</span>
                    </td>
                    <td class="project-actions text-right">
                        <a class="btn btn-primary btn-sm" href="/Content/GetContent/@item.HeaderID">
                            <i class="fas fa-folder">
                            </i>
                            İçerikler
                        </a>
                        <a class="btn btn-info btn-sm" href="/Header/UpdateHeader/@item.HeaderID">
                            <i class="fas fa-pencil-alt">
                            </i>
                            Düzenle
                        </a>
                        <a class="btn btn-@buttoncolor btn-sm" href="/Header/DeleteHeader/@item.HeaderID">
                            <i class="fas fa-arrow-alt-circle-left">
                            </i>
                            @buttonname
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        <a href="/Header/AddHeader" class="btn btn-info">Yeni Başlık Ekle</a>
    </div>
</div>