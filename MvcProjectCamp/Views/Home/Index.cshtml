@model List<EntityLayer.Concrete.Content>


<html>

<br />
<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">

                <!-- Timelime example  -->
                <div class="row">
                    <div class="col-md-12">
                        <!-- The time line -->
                        @foreach (var item in Model)
                        {
                            <div class="timeline">
                                <!-- timeline time label -->
                               
                                <!-- /.timeline-label -->
                                <!-- timeline item -->
                                <div>
                                    <i class="fas fa-comment bg-yellow"></i>
                                    <div class="timeline-item">
                                        <h3 class="timeline-header"><a href="#"> @item.Header.HeaderName </a> </h3>
                                        <div class="timeline-body">
                                            @item.ContentText

                                            <p class="text-lg-right"><b>@item.Writer.WriterName @item.Writer.WriterSurname </b></p>
                                            <p class="text-lg-right"><b>@item.ContentDate.ToShortDateString() </b></p>
                                        </div>
                                    </div>
                                </div>
                                <!-- END timeline item -->
                            </div>
                        }
                     
                    </div>
                    <!-- /.col -->
                </div>
            </div>
            <!-- /.timeline -->
        </section>
        <!-- /.content -->
    </div>
    <!-- ./wrapper -->
</body>

</html>