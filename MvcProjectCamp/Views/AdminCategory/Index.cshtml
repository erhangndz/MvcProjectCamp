@model List<EntityLayer.Concrete.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}



<div>
    <br />
    <br />
    <h3  class="container card-header">Kategori Listesi</h3>

    <table class="table table-striped  container">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Kategori Açıklaması</th>
            <th>Durum</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Başlıklar</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.CategoryName</td>
                <td>@item.CategoryDescription</td>
                <td>@item.CategoryStatus</td>
                <td><a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/AdminCategory/UpdateCategory/@item.CategoryID" class="btn btn-outline-success">Güncelle</a></td>
                <td><a href="/AdminCategory/GetCategory/@item.CategoryID" class="btn btn-outline-primary">Başlıklar</a></td>

            </tr>
        }


    </table>
    
    </div>
<div class="container">
    <a href="/AdminCategory/AddCategory/" class="btn btn-outline-info">Yeni Kategori Girişi</a>
</div>