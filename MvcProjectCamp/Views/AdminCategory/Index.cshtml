@model List<EntityLayer.Concrete.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
    string color = "";
    string colour = "";
    string status = "";
    string buttonname = "";
    string buttoncolor = "";
}



<div>
    <br />
    <br />
    <h3  class="container card-header">Kategori Listesi</h3>

    <table class="table table-striped  container">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>

            <th>Durum</th>
            <th>Güncelle</th>
            <th>İşlem</th>


        </tr>
        @foreach (var item in Model)
        {
            count++;
            if (item.CategoryStatus == false) { colour = "danger"; }
            if (item.CategoryStatus == true) { colour = "success"; }
            if (item.CategoryStatus == false) { status = "Pasif"; }
            if (item.CategoryStatus == true) { status = "Aktif"; }
            if (item.CategoryStatus == false) { buttoncolor = "success"; }
            if (item.CategoryStatus == true) { buttoncolor = "danger"; }
            if (item.CategoryStatus == false) { buttonname = "Aktif Yap"; }
            if (item.CategoryStatus == true) { buttonname = "Pasif Yap"; }
            <tr>
                <th>@count</th>
                <td>@item.CategoryName</td>

                <td class="project-state">
                    <span class="badge badge-@colour">@status</span>
                </td>
                <td><a href="/AdminCategory/UpdateCategory/@item.CategoryID" class="btn btn-outline-success"><i class="fas fa-edit"></i>Güncelle</a></td>
                <td><a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-@buttoncolor"><i class="fas fa-arrow-alt-circle-left"></i>@buttonname</a></td>


            </tr>
        }


    </table>
    
    </div>
<div class="container">
    <a href="/AdminCategory/AddCategory/" class="btn btn-outline-info">Yeni Kategori Girişi</a>
</div>